<!-- res/drawable/border_image.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <stroke android:width="1dp" android:color="#80302E2E"/> <!-- Border color and width -->
            <corners android:radius="0dp"/> <!-- Optional: rounded corners -->
        </shape>
    </item>
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Image goes here -->
        </shape>
    </item>
</layer-list>
