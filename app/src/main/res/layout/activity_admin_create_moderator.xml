<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/socialtrails_logo"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Moderator"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/Musername"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="45dp"
        android:hint="Moderator username"
        android:inputType="text"
        android:layout_margin="10dp"
        android:maxLength="50"
        android:background="@drawable/edit_text_border"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/Memail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:minHeight="45dp"
        android:hint="Moderator email"
        android:inputType="textEmailAddress"
        android:layout_margin="10dp"
        android:maxLength="50"
        android:background="@drawable/edit_text_border"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btnCreateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Moderator"
        android:layout_marginTop="16dp"/>

    <!-- TextView to display the generated password -->
    <TextView
        android:id="@+id/txtGeneratedPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generated Password: "
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <!-- Button to copy the password -->
    <Button
        android:id="@+id/btnCopyPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy Password"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

</LinearLayout>
