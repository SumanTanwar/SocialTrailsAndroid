<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/moderatorText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Moderators"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/createModeratorButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableStart="@drawable/moderator"
             android:text="Create Moderator"
             android:textSize="10dp"
           android:layout_marginStart="8dp"

        />
    </LinearLayout>



    <!-- RecyclerView for displaying the list of moderators -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewModerators"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginTop="8dp"/>

</LinearLayout>
